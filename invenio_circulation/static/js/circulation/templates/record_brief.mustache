{{#entities}}
    <div class="panel panel-default" id="record_{{id}}">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-10">
                    <a href="/circulation/entities/record/{{id}}">{{id}}</a>
                </div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-danger btn-block entity_delete" id="delete_{{id}}">Remove</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-2">Title</div>
                <div class="col-md-10">{{title}}</div>
            </div>
            <div class="row">
                <div class="col-md-2">Authors</div>
                <div class="col-md-10">
                    <ul class="list-unstyled"> 
                        {{#authors}}
                            <li>{{name}}</li> 
                        {{/authors}}
                    <ul>
                </div>
                <div class="col-md-2">Items</div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    <ul class="list-inline">
                        {{#items}}
                            <li><a class="btn btn-default" href="/circulation/entities/item/{{id}}" role="button">{{id}}</a></li>
                        {{/items}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{{/entities}}
